<table>
    <tr>
        <th>Text</th>
        <th>Done</th>
        <th>Detail</th>
    </tr>

    <% for (const todo of todos) { %>
        <tr>
            <td>
                <%= todo.text %>
            </td>
            <td>
                <%= todo.done ? 'ano' : 'ne' %>
            </td>
            <td>
                <a href="/detail/<%= todo.id %>">Detail</a>
                <% if (todo.done) { %>
                    <a href="/toggle/<%= todo.id %>">Undone</a>
                    <a href="/delete/<%= todo.id %>/false">Delete</a>
                    <% } else { %>
                        <a href="/toggle/<%= todo.id %>">Done</a>
                        <% } %>
            </td>
        </tr>
        <% } %>
</table>